<!DOCTYPE html>
<html>
  <head>
    <title>SwaysList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <h1>SwayList</h1>
    <div class="nav">
      <ul>
        <% if session[:user_id] %>
          <li><a href="/logout">Logout</a></li> 
          <li><a href=<%=edit_user_path(session[:user_id])%>>Account</a></li>   
        <% else %>
          <li><a href="/login">Log In</a></li>
          <li><a href=<%=new_user_path%>>Sign Up</a></li>
        <% end %>
        <% if session[:vendor] && current_user.storefront%>
          <li><a href=<%=edit_storefront_path(current_user.storefront)%>>My Store</a></li>
        <% elsif session[:vendor]%>
          <li><a href=<%=new_storefront_path%>>My Store</a></li>
        <% end %>
        <li><a href="/cart">Cart <span class='badge badge-light'><%=session[:cart].count%></span></a></li>
        <li><a href="/">Home</a></li>
      </ul>
    </div>
    

  </header>

  <body>
    <%= yield %>
  </body>
</html>
