<h2>Transaction in Progress</h2>
<% flash.each do |type, msg| %>
  <div class='alert'>
    <%= msg %>
  </div>
<% end %>

<div>
  <h3>Current Balance</h3>
  <p>$<%=current_user.balance%></p>
  <br>
  <h3>Final Balance</h3>
  <p>$<%=current_user.final_balance(cart_total)%></p>
</div>

<%= button_to "Confirm Checkout", {action: "create"}, {class: "btn btn-success"}  %>